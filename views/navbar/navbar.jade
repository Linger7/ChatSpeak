extends ../layout

block navbar
	nav.navbar.navbar-default.navbar-fixed-top#navbarContainer
		div.container
				div.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#')
						img(src=logo, id='navbarLogo')
				div#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav.navbar-right
						li.dropdown#navbarDropDown
							if isAuthed == true
								a.dropdown-toggle#navBarDropLink(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
									img(src='images/default/avatar.png', id='navbarAvatar' class='img-circle')
									span#navBarUsername #{ username }
							else
								a#navBarLink(href='#' onclick='ajaxModalCall("accounts")') Login